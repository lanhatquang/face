<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bkteam.mrrobot.ewal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.bkteam.mrrobot.ewal.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bkteam.mrrobot.ewal.Login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity android:name="com.bkteam.mrrobot.ewal.Signup" />
        <activity
            android:name="com.bkteam.mrrobot.ewal.MenuApp"
            android:label="@string/title_activity_menu_app"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.bkteam.mrrobot.ewal.Forgot_Password" />
        <activity android:name="com.bkteam.mrrobot.ewal.LoginFB" />
        <activity android:name="com.bkteam.mrrobot.ewal.PerInfo" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.bkteam.mrrobot.ewal.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>