<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFB">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/mainColor">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:src="@drawable/image_facebook"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/login_style"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="LOGIN_FB"
                    android:textAllCaps="true"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:fontFamily="casual"
                    android:layout_marginBottom="20dp"
                    />

                <EditText
                    android:id="@+id/mailphpone"
                    android:layout_marginTop="10dp"
                    android:fontFamily="casual"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Email or Phone"
                    android:textColorHint="#666666"
                    android:drawableRight="@mipmap/iconuser"
                    android:textSize="15dp"
                    android:inputType="textEmailAddress"
                    />

                <EditText
                    android:id="@+id/passFB"
                    android:fontFamily="casual"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:textColorHint="#666666"
                    android:drawableRight="@mipmap/iconlock"
                    android:textSize="15dp"
                    android:inputType="textPassword"
                    android:layout_marginBottom="100dp"
                    />

                <Button
                    android:id="@+id/logFB"
                    android:fontFamily="casual"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="log in"
                    android:background="@drawable/btn_login"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    />
            </LinearLayout>

        </FrameLayout>

    </FrameLayout>
</android.support.constraint.ConstraintLayout>