<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/mainColor">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logoknen"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/login_style"
            >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginRight="10dp"
               android:layout_marginLeft="10dp"
               android:orientation="vertical">


               <TextView
                   android:layout_marginTop="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="LOGIN"
                   android:textAllCaps="true"
                   android:textColor="#666666"
                   android:textStyle="bold"
                   android:textSize="20dp"
                   android:fontFamily="casual"
                   android:layout_marginBottom="20dp"
                   />

               <EditText
                   android:id="@+id/email"
                   android:layout_marginTop="10dp"
                   android:fontFamily="casual"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:hint="Email"
                   android:textColorHint="#666666"
                   android:drawableRight="@mipmap/iconuser"
                   android:textSize="15dp"
                   android:inputType="textEmailAddress"
                   />

               <EditText
                   android:id="@+id/password"
                   android:fontFamily="casual"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:hint="Password"
                   android:textColorHint="#666666"
                   android:drawableRight="@mipmap/iconlock"
                   android:textSize="15dp"
                   android:inputType="textPassword"
                   />
               <Button
                   android:id="@+id/forgot"
                   android:layout_gravity="right"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Forgot Password?"
                   android:background="@drawable/btnlink"
                   android:textAllCaps="false"
                   android:textColor="#f57e23"
                   android:fontFamily="casual"
                   android:layout_marginBottom="20dp"
                   />

               <Button
                   android:id="@+id/btnsignup"
                   android:layout_gravity="left"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Sign up?"
                   android:background="@drawable/btnlink"
                   android:textAllCaps="false"
                   android:textColor="#666666"
                   android:fontFamily="casual"
                   />

               <Button
                   android:id="@+id/btnsubmit"
                   android:fontFamily="casual"
                   android:layout_gravity="center"
                   android:layout_width="200dp"
                   android:layout_height="40dp"
                   android:text="log in"
                   android:background="@drawable/btn_login"
                   android:textAllCaps="true"
                   android:textColor="#fff"
                   android:textSize="20dp"
                   />
           </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>